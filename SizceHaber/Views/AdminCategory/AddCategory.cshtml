@model EntityLayer.Concrete.Category

<button class="btn btn-dark" data-toggle="modal" data-target="#Modal1">
    Yeni Kategori
</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yeni bir kategori oluştur</h4>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("NewCategory", "AdminCategory", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.HiddenFor(x => x.CategoryID)
                        <div class="form-group row">
                            @Html.Label("Kategori Adı", new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CategoryName)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.Label("Renk", new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control"})
                                @Html.ValidationMessageFor(x => x.CategoryDescription)
                            </div>
                        </div>
                        <br />
                        <button class="btn btn-dark">Oluştur</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

