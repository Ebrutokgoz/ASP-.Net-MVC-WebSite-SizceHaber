@model EntityLayer.Concrete.Heading




<button class="btn btn-dark" data-toggle="modal" data-target="#Modal2">
    Yeni Başlık
</button>

<div class="modal" id="Modal2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yeni bir haber başlığı oluştur</h4>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Başlık")
                        @Html.TextAreaFor(x => x.HeadingName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.HeadingName)
                        <br />
                        @Html.Label("Kategori")
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new
                            { @class = "form-control" })
                        <br />
                        @Html.Label("Yazar")
                        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new
                        { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterID)
                        <br />

                        <button class="btn btn-dark">Başlığı Oluştur</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
