@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section style="padding: 200px; padding-top: 10px;">
    <h2>Haber başlığını düzenle</h2>
    <br/>
    @using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
    {
<div class="form-group">
    @Html.HiddenFor(x => x.HeadingID)
    @Html.HiddenFor(x => x.HeadingDate)
    @Html.HiddenFor(x => x.WriterID)
    <div class="form-group row">
        @Html.Label("Yazar", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DisplayFor(x => x.Writer.WriterName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Başlık", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.HeadingName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Kategori", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <button class="btn btn-dark">Güncelle</button>
</div>

        
    }

</section>