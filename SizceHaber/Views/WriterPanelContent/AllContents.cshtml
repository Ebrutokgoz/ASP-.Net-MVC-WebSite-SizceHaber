@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Content>
@{
    ViewBag.Title = "AllContents";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{ string color = "";}
<!DOCTYPE html>
<html>
<head>
    <style>
        .padding-50 {
            padding: 100px;
            padding-top: 0px;
        }
    </style>
    <link rel="stylesheet" href="~/Content/PagedList.css">
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content padding-50">
            <div class="content-header">

                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-left">
                                <li class="breadcrumb-item "><a href="/WriterPanelHeading/AllHeadings" style="color:dimgray">Başlık</a></li>
                                <li class="breadcrumb-item"><a href="/WriterPanelContent/AllContents" style="font-weight:bold;">İçerik</a></li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <div class="row">
                @Html.Action("CategoryListMenu", "WriterPanelContent")
                <div class="col-md-9">
                    <div class="container-fluid">

                        <!-- Timelime example  -->
                        <div class="row">
                            <div class="col-md-12">
                                <!-- The time line -->
                                <div class="timeline">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {

                                        if (item.Heading.HeadingStatus)
                                        {
                                            <div class="time-label">
                                                <span style="background-color:@item.Heading.Category.CategoryDescription; width:10rem; text-align:center;"><a style="color:black;" href="/WriterPanelContent/GetListByCategory/@item.Heading.CategoryID">@item.Heading.Category.CategoryName</a></span>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            if (item.ContentStatus)
                                            {
                                                <div>
                                                    <i class="fas fa-comment bg-yellow"></i>
                                                    <div class="timeline-item">
                                                        <h3 class="timeline-header">
                                                            <a href="/WriterPanelContent/ContentByHeading/@item.HeadingID" style="color:orangered;">@item.Heading.HeadingName </a>
                                                            <br />
                                                            <small>
                                                                @item.Heading.Writer.WriterName @item.Heading.Writer.WriterSurname - @(((DateTime)item.Heading.HeadingDate).ToString("dd.MM.yyyy"))
                                                            </small>
                                                        </h3>
                                                        <div class="timeline-body">
                                                            @item.ContentValue
                                                            <br />
                                                            <small>
                                                                @item.Writer.WriterName @item.Writer.WriterSurname - @(((DateTime)item.ContentDate).ToString("dd.MM.yyyy"))
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }




                                    }


                                    <!-- END timeline item -->
                                </div>
                                <div class="d-flex justify-content-end" style="margin-right: 30px; "> @Html.PagedListPager((IPagedList)Model, p => Url.Action("AllContents", new { p }))</div>
                            </div>
                            <!-- /.col -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.timeline -->



        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
        <i class="fas fa-chevron-up"></i>
    </a>
</body>
</html>


